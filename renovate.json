{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":pinAllExceptPeerDependencies"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "groupName": "blocknote packages",
      "matchSourceUrls": [
        "https://github.com/TypeCellOS/BlockNote"
      ]
    }
  ]
}
